<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.medialab.controllers.AddReminderController" alignment="CENTER">

    <Label text="Add Reminder" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <!-- Reminder Type Dropdown -->
    <ComboBox fx:id="reminderTypeComboBox" promptText="Select Reminder Type" />
    <!-- Specific Date Picker (Initially Hidden) -->
    <DatePicker fx:id="reminderDatePicker" promptText="Select a Specific Date" visible="false" />

    <!-- <TextField fx:id="reminderTimeField" promptText="HH:MM (24-hour format)" /> -->
    <ButtonBar>
        <buttons>
            <Button text="Save" onAction="#handleSaveReminder" />
            <Button text="Cancel" onAction="#handleCancelReminder" />
        </buttons>
    </ButtonBar>
</VBox>
