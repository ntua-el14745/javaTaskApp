<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Pos?>

<HBox spacing="30" prefWidth="600" prefHeight="100" 
      style="-fx-background-color: #f5f5f5; -fx-border-radius: 15px; -fx-shadow: 0px 4px 6px; -fx-padding: 20px;"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.medialab.controllers.StatisticsBarController"
      alignment="CENTER">

    <Label fx:id="totalTasksLabel" text="Total Tasks: 0" 
           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #4CAF50; -fx-padding: 5px 10px;"/>
    
    <Label fx:id="completedTasksLabel" text="Completed Tasks: 0" 
           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #4CAF50; -fx-padding: 5px 10px;"/>
    
    <Label fx:id="delayedTasksLabel" text="Delayed Tasks: 0" 
           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #FF5733; -fx-padding: 5px 10px;"/>
    
    <Label fx:id="upcomingTasksLabel" text="Upcoming Tasks (within 7 days): 0" 
           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2196F3; -fx-padding: 5px 10px;"/>
</HBox>
