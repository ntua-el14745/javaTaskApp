        <SplitPane orientation="HORIZONTAL" prefWidth="800" prefHeight="600" xmlns:fx="http://javafx.com/fxml">
        <items>
            <!-- Task List -->
            <VBox>
                <ListView fx:id="taskListView" onMouseClicked="#handleTaskClick" prefHeight="600" prefWidth="400" />
            </VBox>

            <!-- Task Details -->
            <VBox fx:id="detailsPane" spacing="10" alignment="TOP_LEFT" prefWidth="400">
