<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.medialab.controllers.CategoriesController" spacing="10" alignment="CENTER">
    <Label text="Categories" style="-fx-font-size: 16px;" />
    <ListView fx:id="categoriesListView" />
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="newCategoryField" promptText="Enter new category" />
        <Button text="Add" onAction="#handleAddCategory" />
    </HBox>
</VBox>
