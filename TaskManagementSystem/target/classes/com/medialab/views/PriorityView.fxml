<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.medialab.controllers.PriorityController" spacing="10" alignment="CENTER">
    <Label text="Priorities" style="-fx-font-size: 16px;" />
    <ListView fx:id="prioritiesListView" />
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="newPriorityField" promptText="Enter new priority" />
        <Button text="Add" onAction="#handleAddPriority" />
         <TextField fx:id="editPriorityField" promptText="Edit Selected Priority" />
        <Button text="Edit Priority" onAction="#handleEditPriority" />
        <Button text="Delete Selected Priority" onAction="#handleDeletePriority" />
        <Button text="Back" onAction="#goBack" />
    </HBox>
</VBox>
