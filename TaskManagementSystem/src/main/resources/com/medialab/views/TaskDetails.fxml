<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox styleClass="vbox"  spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.medialab.controllers.ViewTaskController" style="-fx-background-color: #f9f9f9; -fx-padding: 20px;">
    <!-- Title -->
    <Label text="Task Details" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <!-- Title Section -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Title:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Label fx:id="titleLabel" style="-fx-font-size: 14px;" />
    </HBox>

    <!-- Description Section -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Description:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <TextArea fx:id="descriptionArea" editable="false" wrapText="true" style="-fx-font-size: 14px; -fx-pref-width: 300px; -fx-pref-height: 100px;" />
    </HBox>

    <!-- Category Section -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Category:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Label fx:id="categoryLabel" style="-fx-font-size: 14px;" />
    </HBox>

    <!-- Priority Section -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Priority:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Label fx:id="priorityLabel" style="-fx-font-size: 14px;" />
    </HBox>

    <!-- Deadline Section -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Deadline:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Label fx:id="deadlineLabel" style="-fx-font-size: 14px;" />
    </HBox>

    <!-- Close Button -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Close" onAction="#handleClose" style="-fx-font-size: 14px; -fx-padding: 10px 20px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5px;" />
    </HBox>
</VBox>


