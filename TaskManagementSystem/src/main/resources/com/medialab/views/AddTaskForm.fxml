<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.medialab.controllers.AddTaskController">
    <Label text="Add New Task" style="-fx-font-size: 16; -fx-font-weight: bold;" />
    <TextField fx:id="taskTitleField" promptText="Enter Task Title" />
    <TextArea fx:id="taskDescriptionArea" promptText="Enter Task Description" />
    <TextField fx:id="taskCategoryField" promptText="Enter Task Category" />
    <TextField fx:id="taskPriorityField" promptText="Enter Task Priority" />
    <DatePicker fx:id="taskDeadlinePicker" promptText="Pick Deadline" />
    <HBox spacing="10" alignment="CENTER">
        <Button text="Add Task" onAction="#handleAddTask" />
        <Button text="Cancel" onAction="#handleCancel" />
    </HBox>
</VBox>
