<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.medialab.controllers.MainController" spacing="80" style="-fx-background-color: #f5f5f5; -fx-padding: 20px;">
    
    <!-- Information Section at the Top with Border -->
    <fx:include source="StatisticsBar.fxml" />
    <!-- Navigation Buttons -->
    <VBox spacing="15" alignment="CENTER" style="-fx-padding-top: 80px;">
        <Button text="View All Tasks" fx:id="taskButton" onAction="#navigateToTaskScene" prefWidth="500" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 30px 40px; -fx-border-radius: 5px;" />
        <Button text="View All Reminders" fx:id="reminderButton" onAction="#navigateToReminderScene" prefWidth="500" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #FF9800; -fx-text-fill: white; -fx-padding: 30px 40px; -fx-border-radius: 5px;" />
        <Button text="View All Categories" fx:id="categoryButton" onAction="#navigateToCategoryScene" prefWidth="500" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 30px 40px; -fx-border-radius: 5px;" />
        <Button text="View All Priorities" fx:id="priorityButton" onAction="#navigateToPriorityScene" prefWidth="500" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #FF5722; -fx-text-fill: white; -fx-padding: 30px 40px; -fx-border-radius: 5px;" />
    </VBox>
</VBox>
